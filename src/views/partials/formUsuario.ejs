<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card" style="min-height: 485px">
            <div class="card-header card-header-text">
                <div class="d-flex justify-content-between lign-items-center">
                    <h4 class="card-title">Usuários </h4>
                    <a href="/usuarios/add" class="btn btn-danger">Adicionar +</a>
                </div>
                <p class="category">Lista com todos os usuários cadastrados!</p>
            </div>
            <div class="card-content table-responsive">
                <table class="table table-hover">
                    <thead class="text-primary">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>email</th>
                            <th>Telefone</th>
                            <th>Cargo</th>
                            <th>Departamento</th>
                            <th>Acões</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (usuario of usuarios){%>
                            <tr>
                                <td><%= usuario.id %></td>
                                <td><%= usuario.nome %></td>
                                <td><%= usuario.email %></td>
                                <td><%= usuario.telefone %></td>
                                <td><%= usuario.cargo %></td>
                                <td><%= usuario.departamento.nome %></td>
                                <td class="d-flex justify-content-beetween">
                                    <a href="/usuarios/edit/<%= usuario.id %>" class="icon icon-warning cursor">
                                        <span class="material-icons">edit_square</span>
                                    </a>
                                    <a href="/usuarios/delete/<%= usuario.id %>" class="icon icon-danger cursor">
                                        <span class="material-icons">delete</span>
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>   
</div>