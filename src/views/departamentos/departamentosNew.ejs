<form style="background-color: #fff; padding: 40px; border-radius: 4px; margin: 80px 0;" method="POST" action="/departamentos/add"> 
    <h2>Adicionar novo Departamento</h2>
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" required>
    </div>
    <div class="form-group">
      <label for="descricao">Descricao</label>
      <input type="descricao" class="form-control" id="descricao" name="descricao" required>
    </div>
    <div class="form-group">
      <label for="centroCusto">Centro Custo</label>
      <select class="form-control" id="centroCusto" name="centroCusto" required>
        <option disabled>Selecione uma opção</option>
        <% for( centroCusto of centroCustos ) { %>
          <option value="<%= centroCusto.id %>"><%= centroCusto.nome %> </option>
        <% } %>
      </select>
    </div>
    
    <button type="submit" class="btn btn-primary" id="Editar">Adicionar</button>
  </form>