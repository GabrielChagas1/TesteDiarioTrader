<form style="background-color: #fff; padding: 40px; border-radius: 4px; margin: 80px 0;" method="POST" action="/centroCustos/edit/<%= centroCustos.id %>"> 
    <h2>Editando um centro de custos</h2>
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" value="<%= centroCustos.nome %>">
    </div>
    <div class="form-group">
      <label for="descricao">Descricao</label>
      <input type="descricao" class="form-control" id="descricao" name="descricao" value="<%= centroCustos.descricao %>">
    </div>
    
    <button type="submit" class="btn btn-primary" id="Editar">Editar</button>
  </form>